{
    "name": "tu-usuario/turnos-medicos",
    "description": "Aplicación para la gestión de turnos médicos.",
    "type": "project",
    "require": {
        "php": "^8.0", 
        "laravel/laravel": "^9.0",
        "guzzlehttp/guzzle": "^7.0",
        "fideloper/proxy": "^4.4",
        "fruitcake/laravel-cors": "^2.0",
        "laravel/tinker": "^2.7",
        "nunomaduro/collision": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "filp/whoops": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/",
            "routes/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-install-cmd": [
            "@php artisan migrate"
        ],
        "post-update-cmd": [
            "@php artisan migrate"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform-check": false
    }
}